<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien_lingkaran"
    android:visibility="visible">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phi = 3.14"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/textViewTinggi"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewTinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jari-jari"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:layout_above="@+id/editTextJari"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:id="@+id/editTextJari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonHitungLuas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Luas"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:layout_above="@+id/editTextLuas2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/editTextLuas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editTextJari"
        android:layout_alignStart="@+id/editTextJari" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/lingkaran"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
